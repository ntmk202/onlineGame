import pygame

# Initialize Pygame
pygame.init()

# Set the window size
window_size = (400, 300)

# Create the window
screen = pygame.display.set_mode(window_size)

# Set the title of the window
pygame.display.set_caption('List Box Example')

# Set the font and size for the list box
font = pygame.font.Font(None, 36)

# Set the background color
bg_color = (255, 255, 255)

# Set the text color
text_color = (0, 0, 0)

# Set the list of items to display in the list box
items = ['item 1', 'item 2', 'item 3', 'item 4', 'item 5']

# Set the height of each item in the list box
item_height = font.size('Tg')[1]

# Set the height of the list box
list_box_height = item_height * len(items)

# Set the width of the list box
list_box_width = font.size(max(items, key=len))[0]

# Create a surface to render the list box
list_box_surface = pygame.Surface((list_box_width, list_box_height))

# Fill the surface with the background color
list_box_surface.fill(bg_color)

# Set the initial position of the list box
list_box_pos = (0, 0)

# Set the initial offset of the list box
offset = 0

# Set the maximum offset of the list box
max_offset = list_box_height - window_size[1]

# Set the scrolling speed
scroll_speed = 10

# Set the flag to indicate that the list box is being dragged
dragging = False

# Set the flag to indicate that the list box is being scrolled
scrolling = False

# Set the flag to indicate that the program should quit
done = False

